<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Defines the shutdown options shown in the reboot dialog. -->
    <array name="shutdown_reboot_options" >
        <item>@string/shutdown_reboot_option_reboot</item>
        <item>@string/shutdown_reboot_option_quick_reboot</item>
        <item>@string/shutdown_reboot_option_recovery</item>
        <item>@string/shutdown_reboot_option_bootloader</item>
    </array>

    <!-- Do not translate. Defines the shutdown actions passed to the kernel.
         The first item should be empty for regular reboot. -->
    <string-array name="shutdown_reboot_actions" translatable="false">
        <item></item>
        <item>quick_reboot</item>
        <item>recovery</item>
        <item>bootloader</item>
    </string-array>
    
    <!-- Do not translate. Defines the mapping of notification package names
         from the actual triggering package to the user selectable package.
         E.g. GTalk notifications come via Google Services Framework
         Format: [triggering package]|[user package] -->
    <string-array name="notification_light_package_mapping" translatable="false">
        <item>com.google.android.gsf|com.google.android.talk</item>
    </string-array>
    
    <!-- Doze pulse screen tint. Default is identity (no tint), but can use RRO -->
    <!-- or similar to apply custom tint. For details on how color is computed -->
    <!-- from this color matrix, see android reference on ColorMatrix. -->
    <string-array translatable="false" name="doze_tint">
    <item>1.0</item> <item>0.0</item> <item>0.0</item> <item>0.0</item> <item>0.0</item>
    <item>0.0</item> <item>1.0</item> <item>0.0</item> <item>0.0</item> <item>0.0</item>
    <item>0.0</item> <item>0.0</item> <item>1.0</item> <item>0.0</item> <item>0.0</item>
    <item>0.0</item> <item>0.0</item> <item>0.0</item> <item>1.0</item> <item>0.0</item>
    </string-array>
 
</resources>
